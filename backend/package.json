{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Jonathan Latties <johnlatties@gmail.com>",
  "scripts": {
    "start": "nodemon --exec node_modules/.bin/babel-node src/main/index.js",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --passWithNoTests --runInBand --no-cache --detectOpenHandles --coverage",
    "test:watch": "npm test -- --watchAll",
    "test:staged": "npm test -- --watchAll=false --findRelatedTests --bail"
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint --fix",
      "npm run test:staged"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/node": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@types/jest": "^26.0.23",
    "@types/mysql": "^2.15.18",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.3.0",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "mysql2": "^2.2.5"
  }
}
