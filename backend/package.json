{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Jonathan Latties <johnlatties@gmail.com>",
  "engines": {
    "node": ">=12.14.0"
  },
  "scripts": {
    "start": "node dist/main/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify  src/main/index.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --passWithNoTests --runInBand --no-cache --detectOpenHandles --coverage",
    "test:watch": "npm test -- --watchAll",
    "test:staged": "npm test -- --watchAll=false --findRelatedTests --bail"
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint --fix",
      "npm run test:staged"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/mysql": "^2.15.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "mysql2": "^2.2.5"
  }
}
